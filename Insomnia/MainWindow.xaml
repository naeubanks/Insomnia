        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Insomnia"
        mc:Ignorable="d"
        Title="Insomnia" Height="203.955" Width="533.694"
        Icon="Resources\Owl.ico">
    <Grid Height="204" VerticalAlignment="Top">
        <Button x:Name="monitorBtn" Content="Turn Monitor Off" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Width="499" Click="monitorOff_Click" Height="27"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="499"><Run Text="While Insomnia is running, your device won't go to sleep. This allows you to perform background tasks or cast media via DLNA without having to worry about the device going to sleep when you press the power button or turn off the display."/><LineBreak/><Run/><LineBreak/><Run Text="You should be able to use the power button on your device to turn of the display without putting it to sleep, however you can use the button below to turn off the monitor as well."/><LineBreak/><Run/></TextBlock>
